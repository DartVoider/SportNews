<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/time2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:text="Время"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tournament_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:text="Турнир"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header1_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Заголовок1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Текст1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/header2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Заголовок2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Текст2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/prediction_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Прогноз"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>